{
    "name": "nPysec",
    "description": "A flask app to serve a file with authentication.",
    "repository": "https://github.com/nknantha/nPysec",
    "success_url": "/",
    "addons": {
        "heroku-postgresql": {
            "plan": "hobby-dev",
            "as": "database"
        }
    },
    "buildpacks": [
        {
            "url": "heroku-community/nginx"
        },
        {
            "url": "heroku/python"
        }
